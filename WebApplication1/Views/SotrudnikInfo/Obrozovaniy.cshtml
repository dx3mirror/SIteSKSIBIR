<script>
    function addSotrudnik() {
        // Получаем значения полей формы
        var obrazovanie1Element = document.getElementById('obrazovanie1');
        var nazvanieUchrezhdeniyaElement = document.getElementById('nazvanieUchrezhdeniya');
        var kvalifikaciyaElement = document.getElementById('kvalifikaciya');
        var nazvanieUchrezhdeniya2Element = document.getElementById('nazvanieUchrezhdeniya2');
        var kvalifikaciya2Element = document.getElementById('kvalifikaciya2');
        var poslevuzovoeElement = document.getElementById('poslevuzovoe');
        var professiaOsnovaElement = document.getElementById('professiaOsnova');
        var professiaDopolnitelElement = document.getElementById('professiaDopolnitel');

        // Проверка на заполненность полей
        if (!obrazovanie1Element.value || !nazvanieUchrezhdeniyaElement.value || !kvalifikaciyaElement.value ||
            !nazvanieUchrezhdeniya2Element.value || !kvalifikaciya2Element.value ||
            !poslevuzovoeElement.value || !professiaOsnovaElement.value || !professiaDopolnitelElement.value) {

            // Показываем уведомление об ошибке
            Swal.fire({
                icon: 'error',
                title: 'Ошибка',
                text: 'Пожалуйста, заполните все обязательные поля!'
            });

            return; // Останавливаем выполнение функции, так как не все поля заполнены
        }

        // Собираем данные из формы
        var formData = {
            Obrazovanie1: obrazovanie1Element.value,
            Nazvanieuchrejdeniya: nazvanieUchrezhdeniyaElement.value,
            KvalifikachiyapoObrazovaniyu: kvalifikaciyaElement.value,
            Nazvanieuchrejdeniya2: nazvanieUchrezhdeniya2Element.value,
            KvalifikachiyapoObrazovaniyu2: kvalifikaciya2Element.value,
            Poslevuzovoe: poslevuzovoeElement.value,
            ProfessiaOsnova: professiaOsnovaElement.value,
            ProfessiaDopolnitel: professiaDopolnitelElement.value
        };

        // Отправляем данные на сервер
        $.ajax({
            url: '/api/AddObrozovaniySotrudnik', // Укажите правильный URL для вашего сервера
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(formData),
            success: function (response) {
                // Обработка успешного ответа от сервера
                console.log(response);

                // Очищаем поля формы
                document.getElementById('sotrudnikForm').reset();

                // Обновляем страницу
                if (response.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Успех',
                        text: 'Запись успешно создана!',
                        timer: 2000
                    }).then(() => {
                        location.reload(); // Обновляем страницу после успешного выполнения
                    });
                }
            },
            error: function (error) {
                // Обработка ошибки
                console.log(error);
            }
        });
    }
</script>

<script>
