<h2 style="color: white;">Сотрудник: @Model.LastName @Model.FirstName @Model.Patranomic</h2>
@model WebApplication1.Models.SotrudnikViewModel
<table id="obrazovanieTable">
    <thead>
        <tr>
            <th style="display: none;">ID</th>
            <th>Образование</th>
            <th>Название учреждения</th>
            <th>Квалификация по образованию</th>
            <th>Название учреждения 2</th>
            <th>Квалификация по образованию 2</th>
            <th>Послевузовое образование</th>
            <th>Профессия основная</th>
            <th>Профессия дополнительная</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obrazovanie in Model.ObrazovanieList)
        {
            <tr>
                <td style="display: none;">@obrazovanie.Id</td>
                <td>@obrazovanie.Obrazovanie1</td>
                <td>@obrazovanie.Nazvanieuchrejdeniya</td>
                <td>@obrazovanie.KvalifikachiyapoObrazovaniyu</td>
                <td>@obrazovanie.Nazvanieuchrejdeniya2</td>
                <td>@obrazovanie.KvalifikachiyapoObrazovaniyu2</td>
                <td>@obrazovanie.Poslevuzovoe</td>
                <td>@obrazovanie.ProfessiaOsnova</td>
                <td>@obrazovanie.ProfessiaDopolnitel</td>
            </tr>
        }
    </tbody>
</table>
